#!/usr/bin/env python3
import codecs
import glob
import os
import sys


def search_path(path='.'):
    searchterm = sys.argv[1]
    datlist = glob.glob('*.dat')
    for f in datlist:
        filename = os.path.join(path, f)
        data = codecs.open(filename).read().decode(encoding='UTF-16-LE')
        if searchterm in data:
            print(filename)


if __name__ == '__main__':
    search_path()
